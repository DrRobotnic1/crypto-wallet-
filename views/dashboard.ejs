    <title>Crypto Wallet</title>
    
  </head>
  <body>
    <script defer
    type="text/javascript" src="/script.js"></script>

    <link rel="stylesheet" href="/dashboard.css" />

    <nav class="nav-bar">
      <div class="logo"><span class="logo-span">Wel</span>come: <%= user_name %> </div>
