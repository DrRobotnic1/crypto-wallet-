    <div class="balance-container">
      <p ><img class="wallet" src="/wallet.png"></p>
          <span>BTC</span><p class="balance-btc">BTC 0.00000</p>
          <span>btc in zar</span><p class="convert-zar">~zar 0.00</p>
    </div>

    <div class="buttons-container">
      <a href="#" class="deposit-btn">DEPOSIT</a>
      <a href="#" class="buy-btn">BUY</a>
      <a href="#" class="sell-btn">SELL</a>
      <a href="#" class="withdraw-btn">WITHDRAW</a>
    </div>
    <h1>TRANSACTIONS</h1>
  
    
    <div class="transaction-container">
      <table class="transaction-table">
        <thead>
          <tr>
            <th>TransactionId</th>
            <th>Date</th>
            <th>Type</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tbody>
   
          
          </tr>
        </tbody>
      </table>
    </div>

    <div class="form-container hidden">
      
      </span>
      <h2>DEPOSIT CASH</h2>
      <form method="post" action="/deposit">
        <div class="input-box">
          <input type="text" placeholder="Enter ZAR amount" name="amount" required="" />
          <div>Current ZAR balance : R</div>
        </div>
        <button class="deposit">Deposit</button>
        
      </form>
      <a href="#" class="close-btn"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="close-icon">
